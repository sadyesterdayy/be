{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "_moduleAliases": {
    "@": "src"
  }
}
